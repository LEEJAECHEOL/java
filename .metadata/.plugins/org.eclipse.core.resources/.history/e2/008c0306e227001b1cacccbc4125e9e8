package ch04;

import java.util.Scanner;

public class Example12 {

	public static void main(String[] args) {
		String[][] seat = {{"---", "---", "---", "---", "---", "---", "---", "---", "---", "---"},{"---", "---", "---", "---", "---", "---", "---", "---", "---", "---"},{"---", "---", "---", "---", "---", "---", "---", "---", "---", "---"}};
		int gubun;
		
		int seatGubun;
		String name;
		int num;
		boolean stop = false;
		Scanner sc = new Scanner(System.in);
		
		System.out.println("명품콘서트홀 예약 시스템입니다.");
		while(true) {
			System.out.print("예약 : 1, 조회 : 2, 취소 : 3, 끝내기 : 4");
			gubun = sc.nextInt();
			switch (gubun) {
			case 1:
				System.out.println("좌석 구분 S(1), A(2), B(3)");
				seatGubun = sc.nextInt();
				String s;
				if(seatGubun == 1) {
					s = "S >> ";
				} else if(seatGubun == 2) {
					s = "A >> ";
				} else {
					s = "B >> ";
				}
				for(int i = 0; i < 10; i++ ) {
					s += seat[seatGubun - 1][i];
				}
				System.out.println(s);
				System.out.println("이름");
				name = sc.nextLine();
				System.out.println("번호");
				num = sc.nextInt();
				seat[seatGubun - 1][num - 1] = name;
				
				break;
			case 2:
				for(int i = 0; i < 3; i++) {
					for(int j = 0; j < 10; j++) {
						
					}
				}
				break;
			case 3:
				
				break;
			case 4:
				stop = true;
				break;

			default:
				
				break;
			}
			if(stop) {
				break;
			}
		}
	}

}
