package ch03;

public class For01 {

	public static void main(String[] args) {
		// 반복문 -> 스텍이 반복되는 것
		// 초기값은 i=1 for문 시작전 한번만 호출됨
		// 조건식은 i가 5보다 작을 때까지 반복하고
		// 스텍이 한번 종료될 때 마다 i 가 1씩 증가
		
		// 첫번째 루프는 초기값 설정 및 조건 확인
		//	두번째 루프부터는 i값 변경 후 조건 확인(반복)
		for(int i = 1; i < 5; i++)  {
			System.out.println("number : " + i);
		}
		System.out.println("-----------------");
		for (int i = 4; i > 0; i--) {
			System.out.println("number : " + i);
		}
	}

}
