package ch04;

public class Person {
	String name;
	String job;
	int age;
	char gender;
	String blood;
	
	public Person() {
		System.out.println("사람이 태어남.");
	}
	
	void preview() {
		System.out.println("==== " + name + " ====");
		System.out.println("직업 : " + job);
		System.out.println("나이 : " + age);
		System.out.println("성별 : " + gender);
		System.out.println("혈액형 : " + blood);
		System.out.println(); // 내려쓰기
	}
}
